{
    "compilerOptions": {
        "target": "es5",

        "lib": [
            "dom",
            "es2015"
        ],

        "module": "esnext",
        "moduleResolution": "node",

        "outDir": "../../static/dist",
        "declaration": false,

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}